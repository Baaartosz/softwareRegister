<Window x:Class="softwareRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:softwareRegister"
        mc:Ignorable="d"
        Title="softwareRegister" Height="150" Width="700">
    <Grid>
        <!-- add a theme to the application -->
        <Label x:Name="FilenameDisplay" Content="hello this is a bit of text" HorizontalAlignment="Center"
               VerticalAlignment="Center" FontSize="12"></Label>
        <Button Content="Find Executable" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Button_OnClick" />
        <Button x:Name="RegBtn" Content="Register" Click="RegisterButton_onClick" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>

